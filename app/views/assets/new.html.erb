<h1>Please Add a piece of equipment below!</h1>

<%= form_for @asset do |u|%>
  <%= u.label :name%>
  <%= u.text_field :name%>
  <br>
  <%= u.label "OSR" %>
  <%= u.check_box :osr%>
  <br>
  <%= u.label :make %>
  <%= u.text_field :make %>
  <br>
  <%= u.label :type %>
  <%= u.text_field :type %>
  <br>
  <%= u.label :eqclass%>
  <%= u.text_field :eqclass%>
  <br>
  <%= u.label :rental_rate_day%>
  <%= u.text_field :rental_rate_day%>
  <br>
  <%= u.label :rental_rate_week%>
  <%= u.text_field :rental_rate_week%>
  <br>
  <%= u.label :rental_rate_month%>
  <%= u.text_field :rental_rate_month%>
  <br>
  <%= u.label :discount%>
  <%= u.text_field :discount%>
  <br>
  <%= u.label :address%>
  <%= u.text_field :address%>
  <br>
  <%= u.label "Please select your company"%>
  <%= u.collection_select :project_id, Project.all, :id, :name %>
  <br>
  <%= u.hidden_field :company_id, value: current_user.company.id%>

  <br>
  <%= u.submit%>
<%end%>
